<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Blood Group</th>
            <th>Age</th>
            <th>City</th>
            <th>Contact</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody id="donorTable"></tbody>
</table>

<script>
    let donors = [];

    document.getElementById("donorForm").addEventListener("submit", function(e) {
        e.preventDefault();

        let donor = {
            name: name.value,
            blood: bloodGroup.value,
            age: age.value,
            city: city.value,
            contact: contact.value
        };

        let index = editIndex.value;

        if (index === "") {
            donors.push(donor);
        } else {
            donors[index] = donor;
            editIndex.value = "";
        }

        this.reset();
        displayDonors();
    });

    function displayDonors() {
        donorTable.innerHTML = "";
        donors.forEach((d, i) => {
            donorTable.innerHTML += `
                <tr>
                    <td>${d.name}</td>
                    <td>${d.blood}</td>
                    <td>${d.age}</td>
                    <td>${d.city}</td>
                    <td>${d.contact}</td>
                    <td>
                        <button class="edit-btn" onclick="editDonor(${i})">Edit</button>
                        <button class="delete-btn" onclick="deleteDonor(${i})">Delete</button>
                    </td>
                </tr>
            `;
        });
    }

    function editDonor(i) {
        let d = donors[i];
        name.value = d.name;
        bloodGroup.value = d.blood;
        age.value = d.age;
        city.value = d.city;
        contact.value = d.contact;
        editIndex.value = i;
    }

    function deleteDonor(i) {
        donors.splice(i, 1);
        displayDonors();
    }
</script>

